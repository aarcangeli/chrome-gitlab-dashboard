{
  "name": "chrome-gitlab-dashboard",
  "version": "0.0.1",
  "description": "Quickly see your GitLab issues and merge requests in a Chrome extension",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/aarcangeli/chrome-gitlab-dashboard.git"
  },
  "scripts": {
    "build": "tsc --noEmit && vite build",
    "build:hmr": "rollup --config utils/reload/rollup.config.ts --configPlugin typescript",
    "wss": "node utils/reload/initReloadServer.js",
    "dev": "npm run build:hmr && (run-p wss dev:nodemon)",
    "dev:nodemon": "nodemon",
    "test": "jest",
    "test-preview": "jest-preview"
  },
  "type": "module",
  "dependencies": {
    "@primer/react": "^35.14.2",
    "dexie": "^3.2.2",
    "dexie-react-hooks": "^1.1.1",
    "gitlab-graphql-types": "^1.1.0",
    "graphql": "^16.6.0",
    "graphql-request": "^5.0.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "styled-components": "^5.3.6"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^10.0.1",
    "@testing-library/react": "13.4.0",
    "@types/chrome": "0.0.204",
    "@types/jest": "29.2.4",
    "@types/node": "18.11.13",
    "@types/react": "18.0.26",
    "@types/react-dom": "18.0.9",
    "@types/ws": "^8.5.3",
    "@typescript-eslint/eslint-plugin": "5.46.1",
    "@typescript-eslint/parser": "5.46.1",
    "@vitejs/plugin-react": "3.0.0",
    "chokidar": "^3.5.3",
    "eslint": "8.29.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-react": "7.31.11",
    "eslint-plugin-react-hooks": "^4.6.0",
    "fs-extra": "11.1.0",
    "jest": "29.3.1",
    "jest-css-modules-transform": "^4.4.2",
    "jest-environment-jsdom": "29.3.1",
    "jest-preview": "^0.3.1",
    "nodemon": "2.0.20",
    "npm-run-all": "^4.1.5",
    "prettier": "2.8.1",
    "rollup": "3.7.3",
    "sass": "1.56.2",
    "ts-jest": "29.0.3",
    "ts-loader": "9.4.2",
    "typescript": "4.9.4",
    "vite": "4.0.1",
    "ws": "8.11.0"
  }
}
